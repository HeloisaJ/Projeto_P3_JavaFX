<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pega.ViewExibirCheckoutcController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <AnchorPane prefHeight="500.0" prefWidth="800.0">
         <children>
            <Button fx:id="btVoltarCliente" layoutX="14.0" layoutY="423.0" mnemonicParsing="false" onAction="#voltarParaViewCliente" text="Voltar" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <TableView fx:id="tabelaClientes" layoutX="30.0" layoutY="70.0" prefHeight="310.0" prefWidth="700.0">
              <columns>
                <TableColumn fx:id="colunaNome" prefWidth="100.0" text="Nome:" />
                <TableColumn fx:id="colunaCPF" prefWidth="100.0" text="CPF:" />
                  <TableColumn fx:id="colunaTelefone" prefWidth="100.0" text="Celular:" />
                  <TableColumn fx:id="colunaQuarto" prefWidth="90.0" text="Quarto:" />
                  <TableColumn fx:id="colunaDiaDoCheckIn" prefWidth="100.0" text="Dia do check in:" />
                  <TableColumn fx:id="colunaDiaDoCheckOut" prefWidth="110.0" text="Dia do check out:" />
                  <TableColumn fx:id="colunaSituacao" prefWidth="100.0" text="Situação:" />
              </columns>
            </TableView>
            <Label layoutX="209.0" layoutY="33.0" text="Lista de clientes para check out hoje " textFill="#970b0b">
               <font>
                  <Font name="Arial Bold Italic" size="20.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</VBox>
