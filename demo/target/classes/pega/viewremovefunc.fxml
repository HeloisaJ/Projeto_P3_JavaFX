<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pega.ViewLoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <AnchorPane prefHeight="493.0" prefWidth="496.0">
         <children>
            <Button fx:id="btLoginLogin" layoutX="200.0" layoutY="252.0" mnemonicParsing="false" onAction="#onBtLoginLogin" text="Efetuar remoção" textAlignment="CENTER" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btVoltarlogin" layoutX="14.0" layoutY="423.0" mnemonicParsing="false" onAction="#btVoltarlogin" text="Voltar tela inicial" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <TextField fx:id="txtSenha" layoutX="184.0" layoutY="194.0" prefHeight="36.0" prefWidth="138.0" promptText="Senha do funcionário " />
            <TextField fx:id="txtNome" layoutX="187.0" layoutY="142.0" prefHeight="36.0" prefWidth="138.0" promptText="Nome do funcionário " />
            <Label layoutX="184.0" layoutY="102.0" text="Demissão de funcionário" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</VBox>
