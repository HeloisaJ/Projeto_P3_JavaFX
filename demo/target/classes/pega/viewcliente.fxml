<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pega.ViewClienteController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <AnchorPane prefHeight="484.0" prefWidth="476.0">
         <children>
            <Button fx:id="btreserva" layoutX="180.0" layoutY="101.0" mnemonicParsing="false" onAction="#btreserva" prefWidth="100.0" text="Reserva" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btCheckin" layoutX="172.0" layoutY="139.0" mnemonicParsing="false" onAction="#btCheckin" text="Realizar Check-in" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btCheckout" layoutX="170.0" layoutY="181.0" mnemonicParsing="false" onAction="#btCheckout" text="Realizar Checkout" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btExibirCheckin" layoutX="141.0" layoutY="219.0" mnemonicParsing="false" onAction="#btExibirCheckin" text="Exibir clientes para Check-in" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btSairConta" layoutX="14.0" layoutY="423.0" mnemonicParsing="false" onAction="#btSairConta" text="Sair da conta" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btExibirCheckout" layoutX="139.0" layoutY="258.0" mnemonicParsing="false" onAction="#btExibirCheckout" text="Exibir clientes para Checkout" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btExibirTodos" layoutX="162.0" layoutY="297.0" mnemonicParsing="false" onAction="#btExibirTodos" text="Exibir Todos clientes" textFill="#970b0b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
